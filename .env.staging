# Staging Environment Configuration
# This file contains settings for the staging environment

# Environment
ENVIRONMENT=staging

# Database Configuration
# Using MongoDB for staging (recommended)
DATABASE_TYPE=mongodb
DATABASE_URL=mongodb://staging-mongodb-host:27017
MONGODB_DATABASE=fastapi_crud_staging
MONGODB_USERNAME=staging_user
MONGODB_PASSWORD=staging_password_change_me
MONGODB_AUTH_SOURCE=admin
MONGODB_TIMEOUT=10000

# Alternative: SQLite for staging (not recommended for production-like environments)
# DATABASE_TYPE=sqlite
# DATABASE_URL=sqlite+aiosqlite:///./staging.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
DEBUG=false

# Application Metadata
APP_TITLE=FastAPI CRUD Backend (Staging)
APP_VERSION=1.0.0

# Logging Configuration
LOG_LEVEL=INFO

# Security Configuration
SECRET_KEY=staging-secret-key-change-me
ALLOWED_ORIGINS=["https://staging.example.com", "https://staging-api.example.com"]

# CORS Configuration
CORS_ORIGINS=["https://staging.example.com"]
