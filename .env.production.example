# Production Environment Configuration Template
# Copy this file to .env.production and fill in the actual values
# NEVER commit .env.production to version control!

# Environment
ENVIRONMENT=production

# Database Configuration
# Using MongoDB for production (recommended)
DATABASE_TYPE=mongodb
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=fastapi_crud_production
MONGODB_USERNAME=production_user
MONGODB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
MONGODB_AUTH_SOURCE=admin
MONGODB_TIMEOUT=10000

# Alternative: PostgreSQL or other production database
# DATABASE_TYPE=postgresql
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/database

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
DEBUG=false

# Application Metadata
APP_TITLE=FastAPI CRUD Backend
APP_VERSION=1.0.0

# Logging Configuration
LOG_LEVEL=WARNING

# Security Configuration
# IMPORTANT: Generate a strong secret key for production!
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_GENERATE_STRONG_SECRET_KEY
ALLOWED_ORIGINS=["https://example.com", "https://api.example.com"]

# CORS Configuration
CORS_ORIGINS=["https://example.com"]
