# Include package metadata and documentation
include README.md
include CLI_README.md
include CHANGELOG.md
include VERSION

# Include version file
include fastapi_crud_cli/__version__.py

# Include all template files and resources
recursive-include fastapi_crud_cli/templates *
recursive-include fastapi_crud_cli/source *

# Include CLI module files
include fastapi_crud_cli/cli/*.py
include fastapi_crud_cli/cli/*.yaml

# Include utility module files
include fastapi_crud_cli/utils/*.py

# Include package initialization files
include fastapi_crud_cli/__init__.py

# Exclude compiled Python files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.pyo
global-exclude *.pyd
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib

# Exclude test files
recursive-exclude tests *
recursive-exclude .pytest_cache *
exclude test_*.py

# Exclude development and build files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude pytest.ini
exclude .coverage
exclude .coveragerc
exclude codecov.yml
exclude .env
exclude .env.example
recursive-exclude htmlcov *
recursive-exclude .git *
recursive-exclude .github *
recursive-exclude venv *
recursive-exclude __pycache__ *
exclude *.egg-info
exclude .eggs
exclude build
exclude dist
