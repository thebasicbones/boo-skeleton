# {{ project_name }} Environment Configuration

# Database Configuration
DATABASE_TYPE={{ database_type }}
{% if database_type == 'sqlite' -%}
DATABASE_URL=sqlite+aiosqlite:///./app.db
{% elif database_type == 'mongodb' -%}
MONGODB_URL={{ database_config.mongodb_url }}
MONGODB_DATABASE={{ database_config.database_name }}
{% elif database_type == 'postgresql' -%}
DATABASE_URL=postgresql+asyncpg://{{ database_config.username }}:{{ database_config.password }}@{{ database_config.host }}:{{ database_config.port }}/{{ database_config.database_name }}
{% endif -%}

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
